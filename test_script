#trying to write a file that will create initial files needed for class projects#!/bin/bash

#create project folder
if [ ! -d project_folder ]; then
	mkdir project_folder
	chmod 777 project_folder
fi
# create folders if not already created
#app
#src
#views
#web
if [ ! -d project_folder/app ]; then
	mkdir project_folder/app
	chmod 777 project_folder/app
fi
if [ ! -d project_folder/src ]; then
	mkdir project_folder/src
	chmod 777 project_folder/app
fi
if [ ! -d project_folder/views ]; then
	mkdir project_folder/views
	chmod 777 project_folder/views
fi
if [ ! -d project_folder/web ]; then
	mkdir project_folder/web
	chmod 777 project_folder/web
fi
#possible
#./script_name.sh &

#composer.json
cat << EOF > project_folder/composer.json
	{
		"require": {
			"phpunit/phpunit": "4.5.*".
			"silex/silex": "~1.1",
			"twig/twig":"1.0"
		}
	}
EOF;
